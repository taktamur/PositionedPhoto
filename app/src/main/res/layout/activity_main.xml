<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>
        <variable name="adapter"
                  type="jp.paming.positionedphoto.ItemAdapter"/>
        <variable name="viewModel"
                  type="jp.paming.positionedphoto.MainViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".card.PhotoCardActivity">
        <CheckBox android:layout_height="wrap_content"
                android:id="@+id/locswitch"
                android:text="位置情報付きのみ表示"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:onCheckedChanged="@{(switch, checked) -> viewModel.onCheckedChanged(checked)}"
                  android:checked="@{viewModel.onlyPositioned}"
        />
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/locswitch"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:id="@+id/recycleView"
                android:layout_height="0dp"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="2"
        android:adapter="@{adapter}"
                app:viewModels="@{viewModel.items}"
        />
    </android.support.constraint.ConstraintLayout>
</layout>